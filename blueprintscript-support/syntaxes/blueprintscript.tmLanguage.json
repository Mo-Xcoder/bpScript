{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "BlueprintScript",
	"patterns": [
		{
			"include": "#decorators"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#node_instance"
		},
		{
			"include": "global_keywords"
		}
	],
	"repository": {
		"decorators": {
			"begin": "(@[a-zA-Z_][a-zA-Z_0-9]*\\s*):",
			"end": "\n",
			"beginCaptures": {
				"1": {
					"name": "entity.name.function.decorator"
				}
			},
			"patterns": [
				{
					"include": "#strings"
				}
			]
		},
		"node_instance": {
			"patterns": [
				{
					"name": "entity.meta",
					"begin": "([a-zA-Z_][a-zA-Z_0-9]*)\\s*\\(",
					"end": "\\)",
					"beginCaptures": {
						"1": {
							"name": "entity.name.class"
						},
						"2": {
							"name": "entity.name"
						}
					},
					"patterns": [
						{
							"include": "#attribute_specification"
						}
					]
				},
				{
					"name": "entity.meta",
					"begin": "([a-zA-Z_][a-zA-Z_0-9]*)\\s+([a-zA-Z_][a-zA-Z_0-9]*)\\s*\\(",
					"end": "\\)",
					"beginCaptures": {
						"1": {
							"name": "entity.name.class"
						},
						"2": {
							"name": "entity.name"
						}
					},
					"patterns": [
						{
							"include": "#attribute_specification"
						}
					]
				},
				{
					"include": "#global_keywords"
				}
			]
		},
		"attribute_specification": {
			"patterns": [
				{
					"name": "meta",
					"match": "([a-zA-Z_][a-zA-Z_0-9]*)\\s*:",
					"captures": {
						"1": {
							"name": "entity.other.attribute-name"
						}
					}
				},
				{
					"name": "invalid.illegal",
					"match": "\\b(node|output|alias|input|public|private|as)\\b"
				},
				{
					"include": "#value"
				}
			]
		},
		"value": {
			"patterns": [
				{
					"name": "meta",
					"match": "\\.\\s*([a-zA-Z_][a-zA-Z_0-9]*)",
					"captures": {
						"1": {
							"name": "entity.other.attribute-name"
						}
					},
					"patterns": [
						{
							"include": "#value"
						}
					]
				},
				{
					"name": "meta",
					"begin": "\\(",
					"end": "\\)",
					"patterns": [
						{
							"include": "#value"
						}
					]
				},
				{
					"include": "#numbers"
				},
				{
					"include": "#strings"
				},
				{
					"include": "#node_instance"
				},
				{
					"include": "#comments"
				}
			]
		},
		"instance_name": {
			"patterns": []
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric",
					"match": "\\b\\d+\\.\\d+\\b"
				},
				{
					"name": "constant.numeric",
					"match": "\\b(?<!\\.)\\d+\\b"
				},
				{
					"name": "constant.numeric",
					"match": "\\b0x[0-9a-fA-F]+\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.blueprintscript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.blueprintscript",
					"match": "\\\\."
				}
			]
		},
		"node_name": {
			"patterns": [
				{
					"match": "[a-zA-Z_][a-zA-Z_0-9]*",
					"name": "entity.name.class"
				}
			]
		},
		"type_specification": {
			"patterns": [
				{
					"match": "\\[(.*?)\\]",
					"captures": {
						"1": {
							"patterns": [
								{
									"include": "#node_name"
								}
							]
						}
					}
				}
			]
		},
		"attributes": {
			"patterns": [
				{
					"name": "meta",
					"begin": "(input|output|modify|toggle)(\\s+[a-zA-Z_][a-zA-Z_0-9]*)\\s*\\[",
					"beginCaptures": {
						"1": {
							"name": "storage.modifier"
						},
						"2": {
							"name": "entity.other.attribute-name"
						}
					},
					"end": "\\]",
					"patterns": [
						{
							"match": "(.*?)\\s*::\\s*([a-zA-Z_][a-zA-Z_0-9]*)",
							"name": "entity.meta",
							"captures": {
								"1": {
									"name": "entity.meta"
								},
								"2": {
									"name": "entity.name.class"
								}
							}
						},
						{
							"match": "[a-zA-Z_][a-zA-Z_0-9]*",
							"name": "entity.name.class"
						}
					]
				},
				{
					"name": "meta",
					"match": "(input|output|modify|toggle)(\\s+[a-zA-Z_][a-zA-Z_0-9]*)",
					"captures": {
						"1": {
							"name": "storage.modifier"
						},
						"2": {
							"name": "entity.other.attribute-name"
						}
					}
				},
				{
					"name": "entity.other.attribute-name",
					"match": "(?<=output )[a-zA-Z_][a-zA-Z_0-9]*"
				},
				{
					"match": "\\b(alias|output|input|modify|toggle)\\b",
					"name": "storage.modifier"
				},
				{
					"include": "#value"
				}
			]
		},
		"global_keywords": {
			"patterns": [
				{
					"name": "keyword.control.blueprintscript",
					"match": "\\b(as)\\b"
				},
				{
					"name": "invalid.illegal",
					"match": "\\b(alias|output|input|modify|toggle)\\b"
				},
				{
					"name": "keyword.control.import",
					"match": "\\b(import|from|as|include)\\b"
				},
				{
					"name": "constant.language",
					"match": "\\b(true|false|nothing)\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash",
					"begin": "!",
					"end": "\n"
				}
			]
		}
	},
	"scopeName": "source.bps"
	
}